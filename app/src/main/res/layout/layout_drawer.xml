<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ScrollView
    android:id="@+id/scrollView_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >


    <LinearLayout
        android:id="@+id/drawer_container"
        android:layout_width="200dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_btn_sidenav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_12dp"
                android:drawableLeft="@drawable/ic_profile"
                android:drawablePadding="@dimen/margin_12dp"
                android:fontFamily="@font/sf_pro_rounded_semibold"
                android:text="Profile"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_17sp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white"
                android:layout_marginStart="@dimen/margin_40dp"
                android:layout_marginBottom="@dimen/margin_12dp"

                />

            <TextView
                android:id="@+id/packs_btn_sidenav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_12dp"
                android:drawableLeft="@drawable/ic_your_packs"
                android:drawablePadding="@dimen/margin_12dp"
                android:fontFamily="@font/sf_pro_rounded_semibold"
                android:text="Packs"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_17sp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white"
                android:layout_marginStart="@dimen/margin_40dp"
                android:layout_marginBottom="@dimen/margin_12dp"/>

            <TextView
                android:id="@+id/skipped_btn_sidenav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_12dp"
                android:drawableLeft="@drawable/ic_privacy"
                android:drawablePadding="@dimen/margin_12dp"
                android:fontFamily="@font/sf_pro_rounded_semibold"
                android:text="Skipped Orders"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_17sp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white"
                android:layout_marginBottom="@dimen/margin_12dp"
                android:layout_marginStart="@dimen/margin_40dp"/>

            <TextView
                android:id="@+id/privacy_btn_sidenav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_12dp"
                android:drawableLeft="@drawable/ic_privacy"
                android:drawablePadding="@dimen/margin_12dp"
                android:fontFamily="@font/sf_pro_rounded_semibold"
                android:text="Privacy"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_17sp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white"
                android:layout_marginBottom="@dimen/margin_12dp"
                android:layout_marginStart="@dimen/margin_40dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/margin_40dp"
            android:padding="@dimen/margin_20dp"
            android:fontFamily="@font/sf_pro_rounded_semibold"
            android:textSize="@dimen/text_size_17sp"
            android:text="Sign out"
            android:textColor="@color/white"
            android:drawablePadding="@dimen/margin_15dp"
            android:drawableRight="@drawable/ic_arrow_signout"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            />

    </LinearLayout>


</ScrollView>
</layout>
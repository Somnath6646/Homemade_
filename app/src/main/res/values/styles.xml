<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/dull_white</item>
        <item name="colorAccent">#AB06C167</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="EditTextStyle" parent="TextAppearance.MaterialComponents.Caption">

        <item name="colorSurface">@android:color/transparent</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="fontFamily">@font/sf_pro_rounded_semibold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="hintTextStyle" parent="TextAppearance.MaterialComponents.Caption">

        <item name="colorSurface">@android:color/transparent</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="fontFamily">@font/sf_pro_rounded_semibold</item>
        <item name="android:textStyle">bold</item>
    </style>


    
    <style name="MyTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    </style>

</resources>